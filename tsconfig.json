    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "outDir": "./public",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true
    },
    "include": [
        "src"
    ]
}